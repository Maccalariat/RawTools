# RawToolsLib
cmake_minimum_required(VERSION 3.7 FATAL_ERROR)
project(RawToolsLib LANGUAGES CXX)
set_target_properties(RawToolsLib PROPERTIES
  CXX_STANDARD 14
  CXX_STANDARD_REQUIRED YES
  CXX_EXTENSIONS NO
  ARCHIVE_OUTPUT_DIRECTORY "${CMAKE_BINARY_DIR}/${CMAKE_BUILD_TYPE}/arc"
  LIBRARY_OUTPUT_DIRECTORY "${CMAKE_BINARY_DIR}/${CMAKE_BUILD_TYPE}/lib"
  RUNTIME_OUTPUT_DIRECTORY "${CMAKE_BINARY_DIR}/${CMAKE_BUILD_TYPE}/bin"
  )
target_sources(RawToolsLib
  PUBLIC
  FileBuffer.cpp
  FileBuffer.h
  FileMetaData.cpp
  FileMetaData.h
  ProcessBlock.cpp
  ProcessBlock.h
  RawImage.cpp
  RawImage.h
  RawTools.cpp
  RawTools.h
  Sony.cpp
  Sony.h
  )

add_library(RawToolsLib)
